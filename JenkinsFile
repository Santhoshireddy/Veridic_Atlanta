pipeline {
    agent 

    stages {
        stage('Build') { 
            steps { 
                sh 'Hello World' 
            }
        }
        stage('Test'){
            steps {
                sh 'make check'
                junit 'reports/**/*.xml' 
            }
        }
        stage('Deploy') {
            steps {
                sh 'make publish'
            }
        }
    }
}
